# Gestion du 'ls' : couleur & ne touche pas aux accents
alias ls='ls --classify --tabsize=0 --literal --color=auto --show-control-chars --human-readable -lt'

# Demande confirmation avant d'Ã©craser un fichier
alias cp='cp -v --interactive'
alias mv='mv -v --interactive'
alias rm='rm -v --interactive'

# Raccourcis pour 'ls'
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'

# Quelques alias pratiques
alias c='clear'
alias less='less --quiet'
alias s='cd ..'
alias df='df --human-readable'
alias du='du -h'
alias ds='du -hs'
alias m='mutt -y'
alias md='mkdir -p'
alias rd='rmdir'
alias wifi='wicd-client -n'
alias upgrade='sudo apt-get update && sudo apt-get upgrade && sudo apt-get clean'
alias vim='vim --servername VIM'
alias sci-hub='echo http://scihub22266oqcxt.onion'
alias feh='feh -F'
